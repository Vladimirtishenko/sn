@import "func.styl"

.party-center-block
	width: w 
	margin: a
	padding: 0 30px
	height: 400px
	position: relative

.party-for-slider-images
	width: 645px
	position: relative
	height: 400px
	float: left
	margin-right: 30px
	
.party-outer-content-photo > img
	position: absolute
	height:420px
	right: 50px
	bottom: 0

.party-photo-freedom
	width: w 
	margin: a
	padding: 0 30px
	z-index: 10
	position: relative

.party-absolute-map
	width: w 
	margin: a
	padding: 0 30px
	z-index: 12
	position: relative i

.party-map-regions
	position: absolute
	top: 200px
	right: 40px

.party-photo-freedom > .party-photo-outer-block
	top: -399px
	position:absolute
	left: 695px
	height: 700px	
	border-width: 0 1px 0 1px
	border-style: solid
	border-color: #e8e8e8
	width: 250px


.party-photo-outer-block
	padding: 0 20px
	background: #fff
	overflow: hidden
	
.party-photo-freedom > .party-photo-outer-block:before
		width:100%
		bottom: 0
		left: 0
		height: 50px
		background: linear-gradient(to bottom,  rgba(255,255,255,0) 0%,rgba(255,255,255,1) 100%)
		content: ""
		position: absolute

.party-region
	display: none

.party-photo-freedom > .party-photo-outer-block > .party-photo-inner-block
	width: 205px
	position: absolute
	margin-bottom: 35px

.party-photo-freedom > .party-photo-inner-block h2 
	padding-bottom: 20px

.party-photo-unit
	margin-bottom: 35px
	display: block
	&:hover p 
		text-decoration: underline
	&:hover img 
		opacity: .8

.party-photo-unit:nth-last-of-type(2)
	margin-bottom: 15px i

.party-photo-unit img 
	margin: 7px 0 20px 0
	width: 100%
	
	
.party-photo-unit p 
	color: defaultColor i

.party-doc-block
	position: absolute
	right:30px
	width: 165px

.party-smi a 
	display: inline-block
	width: 100%
	margin: 15px 0 10px 0

.party-document
	width: 100%;
	height:220px
	margin-top: 30px
	display: table
	background: buttonOrange

.party-document-cell
	display: table-cell
	vertical-align: middle
	text-align: center
	
.party-charter
	padding-bottom: 20px
	display: inline-block
	border-bottom 1px solid #ffd56b
	position:relative
	color: #fff
	text-decoration: none i
	&:before
		position: relative
		width: 21px
		height: 39px
		display: block
		margin: 0 auto 10px
		content: ""
		background: url(../images/logo-v.png)
	&:hover
		text-decoration: underline i

.party-program
	color: #fff
	padding-top:20px
	display: inline-block
	text-decoration: none i
	&:hover
		text-decoration: underline i
		
	
.party-outer-content-photo
	height: 100%
	position: absolute
	width: 100%
	display: none
	opacity: 0
	

.party-text-lider
	display: table
	position: absolute
	width: 60%
	text-align: left
	height: 100%
	
.party-outer-of-cell
	display: table-cell
	vertical-align: middle	

.party-outer-of-cell h2
	padding: 5px 0 20px
	color: defaultColor 

.party-outer-of-cell p
	color: defaultColor 

.party-outer-of-cell span
	font-size: 17px
	color: #6f6f6f
	font-style: italic
	display: inline-block
	padding: 0 0 20px 20px



