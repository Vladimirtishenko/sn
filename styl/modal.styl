@import "func.styl"

.party-modal-block
	width: 100%
	height: 100%
	position: fixed
	top: 0
	left: 0
	background: rgba(93,107,116, .67)
	z-index: 999999
	display: none
	opacity: 0
	

.party-popup-content
	width: 690px
	height: 580px
	background: #fff
	position: absolute
	top: 0
	left: 0
	bottom: 0
	right: 0
	margin: auto
	padding: 30px 36px

.party-close-icon
	position: absolute
	width: 30px
	height: 30px
	right: 20px
	top: 20px

.party-close-icon i 
	font-size: 30px
	color: buttonOrange
	cursor: pointer
	&:hover 
		color: grey
	

.party-popup-content .wrapper
	height: 100px
	
.party-outer-forms
	margin-top: 30px

.party-inline-field input
	background: #e8e8e8
	height: 32px
	width: 306px
	margin-right: 20px
	padding: 0 10px
	
.party-inline-textarea textarea
	background: #e8e8e8
	height: 80px
	width: 306px
	margin-right: 20px
	padding: 5px 10px
	resize: none

.party-inline-field label
	margin-bottom:0

.party-inline-field, .party-inline-textarea
	margin-bottom: 20px

.party-inline-field *
	display:inline-block
	vertical-align: middle

.party-inline-textarea *
	display:inline-block
	vertical-align: top